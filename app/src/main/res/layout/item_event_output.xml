<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginTop="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/letter_medium"
        app:cardBackgroundColor="?attr/cardbackground"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivEventIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:transitionName="@string/image_testing_share"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/ivEventIcon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOutputEvent"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing"
                    android:transitionName="@string/txt_event_testing_share"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="?attr/textcolor"
                    android:textStyle="bold"
                    tools:text="Event" />

                <TextView
                    android:transitionName="@string/txt_event_testing_descr_share"
                    android:id="@+id/tvOutputEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginBottom="10dp"
                    android:textColor="?attr/textcolor"
                    android:textSize="12sp"
                    tools:text="items" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/letter_medium"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llEventTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDateEventReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:layout_marginRight="@dimen/spacing_small"
                            android:textColor="?attr/textcolor"
                            tools:text="19/03/2018" />

                        <TextView
                            android:id="@+id/tvEventTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:layout_marginRight="@dimen/letter_small"
                            android:textColor="?attr/textcolor"
                            tools:text="13:90" />

                        <ImageView
                            android:id="@+id/ivAlarmEventClock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_alarm_blue_24dp"
                            android:visibility="gone" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/letter_medium"
                        android:layout_marginRight="@dimen/letter_medium" />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>